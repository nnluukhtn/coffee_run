<% if @running_time == 0 %>
<% else %>
  <div class="row running-list">
    <div class="small-12 medium-8 medium-offset-2 large-6 large-offset-3 columns coffee-run-form ordering-list">
      <p class="font-book fs22 secondary-color lh150"><span class="font-bold primary-color ordered-people"><%= @orderers.count %></span> people have placed their orders.<span class="ordering-people" style="display: none"><br/><span class="font-bold primary-color"></span> people are still ordering.</span></p>

      <div class="people-list">
        <% @orderers.each do |orderer| %>
          <p class="font-book fs22 secondary-color"><span class="primary-color"><%= orderer.name %></span> is getting a <span class="primary-color"><%= orderer.beverage %></span>.</p>
        <% end %>
      </div>

      <p class="font-book fs22 secondary-color ordering-detail"><span class="font-bold primary-color"></span> are struggling with decision making.</p>
    </div>
  </div>
<% end %>
